<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/defaultTextColor</item>
    </style>


    <!--导航标题属性-->
    <!--顶部导航栏 -->
    <declare-styleable name="commonTitleView">
        <!-- 是否显示左边的回退按钮-->
        <attr name="show_left" format="boolean"/>
        <!-- 左边按钮资源-->
        <attr name="left_drawable" format="reference"/>
        <!-- 标题内容 -->
        <attr name="title_context" format="string"/>
        <!-- 是否显示右侧 -->
        <attr name="show_right" format="boolean"/>
        <!-- 右边按钮资源-->
        <attr name="right_drawable" format="reference"/>
        <!--标题字体大小 -->
        <attr name="title_size" format="dimension"/>
        <!--标题颜色-->
        <attr name="title_color" format="color"/>
    </declare-styleable>

    <style name="line">
        <item name="android:background">@color/bg_color</item>
    </style>

    <style name="line_vertical" parent="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>
    <style name="line_horizontal" parent="line">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <!-- 商品title样式-->
    <style name="ware_title">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">3</item>
    </style>
    <!--商品价格样式-->
    <style name="ware_price">
        <item name="android:textColor">@color/crimson</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!-- 大按钮样式-->
    <style name="bigButton">
        <item name="android:textSize">@dimen/smallButtonTextSize</item>
        <item name="android:textColor">@drawable/white_color_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/largePadding</item>
        <item name="android:paddingRight">@dimen/largePadding</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- 大按钮样式-->
    <style name="bigButton2">
        <item name="android:textSize">@dimen/smallButtonTextSize</item>
        <item name="android:textColor">@drawable/white_color_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/largePadding</item>
        <item name="android:paddingRight">@dimen/largePadding</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <!--大红色按钮样式-->
    <style name="bigRedButton" parent="@style/bigButton">
        <item name="android:background">@drawable/bg_btn_style_red</item>
    </style>

    <!--大红色按钮样式-->
    <style name="bigRedButton2" parent="@style/bigButton2">
        <item name="android:background">@drawable/bg_btn_style_red</item>
    </style>

</resources>
